{
	"manifest_version": 3,
	"name": "FRS Auto-Taker",
	"version": "1.0.0",
	"description": "Bot otomasi pengambilan kelas FRS dengan prioritas, CAPTCHA hub, dan Notify Extended (monitor extend kuota).",
	"action": {
		"default_title": "FRS Auto-Taker",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"options_page": "options.html",
	"permissions": ["storage", "tabs", "notifications"],
	"host_permissions": ["*://*/list_frs.php*", "*://*/securimage/*"],
	"content_scripts": [
		{
			"matches": ["*://*/list_frs.php*"],
			"js": ["bridge.js", "content.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/*"],
			"matches": ["*://*/*"]
		}
	]
}
